{
  "manifest_version": 3,
  "name": "SmartTweet",
  "version": "1.0",
  "description": "Extension for auto reply to tweets with help of AI",
  "icons": {
    "128": "images/icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage",
    "cookies"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["content.js"]
    },
    {
      "matches": ["https://x.com/*"],
      "js": ["flowbite.js"]
    },
    {
      "matches": ["https://x.com/*"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["flowbite/flowbite.min.css", "flowbite/flowbite.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/icon.png"
    }
  },
  "host_permissions": ["https://x.com/*", "https://x.com/" , "*://api.twitterai.workers.dev/*"]
}
